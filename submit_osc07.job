export TT=0.015625e-3
export TMP_DIR=/temp/felipe.mt87/drop$TT

export OUT_DIR=/cluster/felipe.mt87/cluster_out/paper_osc_mr
export OUT_NAME=drop_07.txt
export MSH_IN=/cluster/felipe.mt87/mef/cl-simu/results/osc_drop/3d/drop.msh
export VTK_OUT=drop_07.vtk


mkdir -p $TMP_DIR 
rm -f $TMP_DIR/*

cp /cluster/felipe.mt87/mef/cl-simu/main $TMP_DIR
cp /cluster/felipe.mt87/mef/cl-simu/args $TMP_DIR

cd $TMP_DIR

export OMP_NUM_THREADS=4

#export GOMP_CPU_AFFINITY=0-3

{ time ./main -dt $TT -fin $MSH_IN -fout $VTK_OUT `cat args` >&2 2>&2; } 2> $OUT_DIR/$OUT_NAME

#./main -dt -fin $MSH_IN -fout $VTK_OUT `cat args` > $OUT_NAME 2>&1

rm -f main
rm -f args

cp ContactHistory $OUT_DIR/drop_hist_07
cp -r $TMP_DIR/* $OUT_DIR

rm -rf $TMP_DIR

echo "Fim do script"

